{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "strict": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["../shared/dist/types/*"]
    }
  },
  "include": ["src"]
}
